<UserControl x:Class="Home.Views.HomeUcView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
            xmlns:mds="clr-namespace:MaterialDesignColors.ColorManipulation;assembly=MaterialDesignColors"
            xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
            xmlns:local="clr-namespace:Home.Views" 
            xmlns:viewmodels="clr-namespace:Home.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:HomeUcViewModel}"
            FontFamily="微软雅黑"
            mc:Ignorable="d" 
            d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- 仅在设计时加载资源 -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Home;component/Md.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
       <Grid.RowDefinitions>
           <RowDefinition Height="auto"></RowDefinition>
           <RowDefinition Height="auto"></RowDefinition>
           <RowDefinition></RowDefinition>
       </Grid.RowDefinitions>
       <TextBlock Text="{Binding AccountName}" FontSize="20" Margin="10 0"></TextBlock>
       <ItemsControl Grid.Row="1" ItemsSource="{Binding StackPlaneList}">
           <ItemsControl.ItemsPanel>
               <ItemsPanelTemplate>
                   <UniformGrid Columns="4" ></UniformGrid>
               </ItemsPanelTemplate>
           </ItemsControl.ItemsPanel>
           <ItemsControl.ItemTemplate>
               <DataTemplate>
                    <Border Background="{Binding BackGroundColor}"  Margin="10" Padding="5" CornerRadius="5" Style="{StaticResource EndControl}" ToolTip="进入~~">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick"  Command="{Binding DataContext.NavigateCommand,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ItemsControl }}" CommandParameter="{Binding}"></MouseBinding>
                        </Border.InputBindings>
                        <Grid>
                            <StackPanel Orientation="Vertical" Grid.Row="0" Margin="20 10" >
                               <md:PackIcon Kind="{Binding Icon}" Width="25" Height="25" HorizontalAlignment="Left"></md:PackIcon>
                               <TextBlock x:Name="NameText" Text="{Binding ItemName}" FontSize="16" Margin="0,15"></TextBlock>
                               <TextBlock Text="{Binding Result}" FontSize="14" FontWeight="Bold" ></TextBlock>
                           </StackPanel>
                           <!--画背景-->
                           <Canvas ClipToBounds="True">
                               <Border Canvas.Top="10" Canvas.Right="-50" Height="120" Width="120" Background="#ffffff" CornerRadius="100" Opacity="0.1"/>
                               <Border Canvas.Top="80" Canvas.Right="-30" Height="120" Width="120" Background="#ffffff" CornerRadius="100" Opacity="0.1"/>
                           </Canvas>
                       </Grid>
                   </Border>
               </DataTemplate>
           </ItemsControl.ItemTemplate>
       </ItemsControl>
       <!--代办事项-->
       <Grid Grid.Row="2" Margin=" 0,20">
           <Grid.ColumnDefinitions>
               <ColumnDefinition></ColumnDefinition>
               <ColumnDefinition></ColumnDefinition>
           </Grid.ColumnDefinitions>
           <!--左侧代办-->
           <Border CornerRadius="5" Margin=" 10 0" Opacity="0.2" Background="#bebebebe" Style="{StaticResource EndControl}" />
           <DockPanel Margin="10,0" >
                <DockPanel Margin="10,5" LastChildFill="False" DockPanel.Dock="Top">
                    <TextBlock Text="代办事项" FontSize="20" Margin="10,5" FontWeight="Bold"/>

                    <Button Width="30" Command="{Binding ShowAddWaitDialogCommand}" Height="30" Margin="10,5" DockPanel.Dock="Right" VerticalAlignment="Top" Style="{StaticResource MaterialDesignFloatingActionButton}">
                        <md:PackIcon Kind="Add" ></md:PackIcon>
                    </Button>
                </DockPanel>
                <!--左代办集合-->
                <ListBox ItemsSource="{Binding NotResolveWaitInfoList}" HorizontalContentAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            
                            <i:InvokeCommandAction Command="{Binding ShowEditWaitDialogCommand}" CommandParameter="{Binding SelectedItem,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel MaxHeight="80" LastChildFill="False"  ToolTip="双击编辑">
                                <ToggleButton DockPanel.Dock="Right" IsChecked="{Binding Status}" Command="{Binding DataContext.ChangeWaitingStateCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}
                                   }" CommandParameter="{Binding}"/>
                                <StackPanel DockPanel.Dock="Left">
                                    <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0 5"></TextBlock>
                                    <TextBlock Text="{Binding Content}" Opacity="0.5" Margin="0 5" Foreground="White"></TextBlock>
                                </StackPanel>
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
           </DockPanel>

            <Border CornerRadius="5" Margin=" 10 0" Opacity="0.2" Grid.Column="1" Background="#bebebebe" Style="{StaticResource EndControl}"/>
            <DockPanel Margin="10,0" Grid.Column="1" >
                <DockPanel Margin="10,5" LastChildFill="False" DockPanel.Dock="Top">
                    <TextBlock Text="备忘录" FontSize="20" Margin="10,5" FontWeight="Bold"/>
                    <Button Width="30" Height="30" Command="{Binding ShowAddMemoDialogCommand}" Margin="10,5" DockPanel.Dock="Right" VerticalAlignment="Top" Style="{StaticResource MaterialDesignFloatingActionButton}">
                        <md:PackIcon Kind="Add"></md:PackIcon>
                    </Button>
                </DockPanel>
                <!--左备忘录集合-->
                <ListBox ItemsSource="{Binding MemoInfoList}" HorizontalContentAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding ShowEditMemoDialogCommand}" CommandParameter="{Binding SelectedItem,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListBox}}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel MaxHeight="80" LastChildFill="False" ToolTip="双击编辑">
                                <ToggleButton DockPanel.Dock="Right"  Command="{Binding DataContext.DeleteMemoCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}
                                   }" CommandParameter="{Binding}"/>
                                <StackPanel DockPanel.Dock="Left">
                                    <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold" Foreground="White" Margin="5 5"></TextBlock>
                                    <TextBlock Text="{Binding Content}" Opacity="0.5" Foreground="White" Margin="5 5"></TextBlock>
                                </StackPanel>
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Grid>
   </Grid>
</UserControl>
